<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Form</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ"
      crossorigin="anonymous"
    />

    <style>
      .firstSec { width: 85%; background-color: #3590da; } b{ font-weight: 600;
      color: white; }

      .firstSec {
        height: auto;
      }

      h1{
        text-align: center;
      }

    </style>

  </head>
  <body>
    
    <div class="container firstSec"  id="form">
      <h1><b>NIT Jalandhar</b> </h1>
      <hr />

      <form action="/form" method="POST">

        <div class="row my-2">
          <!-- {{! first section }} -->

          <div class="col-md-6 px-2">

            <div class="form-group mt-2">
              <label for="teacherName"><b>Teacher Name</b></label>
              <input
                type="text"
                id="teacherName"
                name="teacherName"
                class="form-control"
                placeholder="Enter here"
              />
            </div>

            <div class="form-group mt-2">
              <label for="designation"><b>Designation</b></label>
              <input
                type="text"
                id="designation"
                name="designation"
                class="form-control"
                placeholder="Enter here"
              />
            </div>

            <div class="form-group mt-2">
              <label for="prgField"><b>Programme</b></label>
              <select
                class="form-select"
                aria-label="Default select example"
                name="programme"
              >
                <option selected>Open this select menu</option>
                <option value="1">BSc</option>
                <option value="2">BTech</option>
                <option value="3">MTech</option>
                <option value="4">PHD</option>
                <option value="5">MSc</option>

              </select>
            </div>

            <div class="form-group mt-2">
              <label for="branchField"><b>Branch</b></label>
              <select
                class="form-select"
                aria-label="Default select example"
                name="branch"
              >
                <option selected>Open this select menu</option>
                <option value="1">Bio Technology</option>
                <option value="2">Chemical Engineering</option>
                <option value="3">Civil Engineering</option>
                <option value="4">Computer Science and Engineering</option>
                <option value="5">Electrical Engineering</option>
                <option value="6">Electronics and communication Engineering</option>
                <option value="7">Industrial and Production Engineering</option>
                <option value="8">Information Technology</option>
                <option value="9">Instrumentation and Control Engineering</option>
                <option value="10">Mechanical Engineering</option>
                <option value="11">Textile Technology</option>

              </select>
            </div>
          </div>
          <div class="col-md-6">

            <div class="form-group mt-2">
              <label for="semField"><b>Semester</b></label>
              <select
                class="form-select"
                aria-label="Default select example"
                name="semester"
              >
                <option selected>Open this select menu</option>
                <option value="1">First</option>
                <option value="2">Second</option>
                <option value="3">Third</option>
                <option value="4">Fourth</option>
                <option value="5">Fifth</option>
                <option value="6">Six</option>
                <option value="7">Seven</option>
                <option value="8">Eight</option>
              </select>
            </div>

            <div class="form-group mt-2">
              <label for="subjectField"><b>Subject Name</b></label>
              <select
                class="form-select"
                aria-label="Default select example"
                name="subField"
              >
                <option selected>Open this select menu</option>
                <option value="1">Computer Networks</option>
                <option value="2">Digital Circuits and Logic Design</option>
                <option value="3">DataBase Management System</option>
                <option value="4">Data Structures and Algorithms</option>
                <option value="5">Machine Learning</option>

              </select>
            </div>

            <div class="form-group mt-2">
              <label for="courseCode"><b>Course Code</b></label>
              <input
                type="text"
                id="courseCode"
                name="courseCode"
                class="form-control"
                placeholder="Enter here"
              />
            </div>

            <div class="form-group mt-2">
              <div class="row">
                <div class="col-md-4">
                  <label><b>Session start Month</b></label>
                  <input type="text" class="form-control" id="startMonth" name="startMonth" placeholder="Enter here" />
                </div>

                <div class="col-md-4">
                  <label><b>Session end Month</b></label>
                  <input type="text" class="form-control" id="endMonth" name="endMonth" placeholder="Enter here"/>
                </div>

                <div class="col-md-4">
                  <label><b>Year</b></label>
                  <input type="text" class="form-control" id="year" name="year" placeholder="Enter here"/>
                </div>
              </div>

            </div>

          </div>

          <hr />
          <!-- {{! second section }} -->

          <div class="row mt-3">
            <p><b style="font-weight: 700; font-size:1.2rem">Upload Document</b></p>
            <div class="col-md-6">

              <div class="form-group mt-2">
                <label for="timeTableField" class="form-label"><b>Time Table</b>
                </label>
                <input class="form-control" type="file" id="timeTableField" name="timeTable"/>
              </div>

              <div class="form-group mt-2">
                <label for="lecturePlanField" class="form-label"><b>Lecture Plan</b>
                </label>
                <input class="form-control" type="file" id="lecturePlanField" name="lecturePlan"/>
              </div>

              <div class="form-group mt-2">
                <label for="marksheetField" class="form-label"><b>MarkSheet</b>
                </label>
                <input class="form-control" type="file" id="marksheetField" name="marksheet"/>
              </div>

              <div class="form-group mt-2">
                <label for="assignmentField" class="form-label"><b>Assignment</b>
                </label>
                <input class="form-control" type="file" id="assignmentField" name="assignments" />
              </div>

            </div>

            <div class="col-md-6">
              <div class="form-group mt-2">
                <label for="quesPaperField" class="form-label"><b>Question paper</b>
                </label>
                <input class="form-control" type="file" id="quesPaperField" name="qpaper" />
              </div>

               <div class="form-group mt-2">
                <label for="summarySheetField" class="form-label"><b>Summary sheet</b>
                </label>
                <input class="form-control" type="file" id="summarySheetField" name="summary"/>
              </div>

              <div class="form-group mt-2">
                <label for="attendenceField" class="form-label"><b
                  >Attendence</b>
                </label>
                <input class="form-control" type="file" id="attendenceField" name="attendance"/>
              </div>

              

              <div class="form-group mt-3">
                <label for="pdfNameField"><b>PDF Name</b></label>
                <input
                  type="text"
                  id="pdfNameField"
                  name="pdfNameField"
                  class="form-control"
                  placeholder="Enter here"
                />
              </div>

            </div>

          </div>

        </div>

        <div class="container container-fluid text-center mt-5 pb-2">
          <button type="submit" class="btn btn-lg btn-primary">Generate File</button>
        </div>

      </form>

    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
      crossorigin="anonymous"
    ></script>

  </body>
</html>